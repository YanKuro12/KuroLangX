{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "KuroLangX",
  "scopeName": "source.kuro",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#comments" },
    { "include": "#functions" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kuro",
          "match": "\\b(var|FuncGroup|if|else|return|import|as)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kuro",
          "begin": "\"",
          "end": "\""
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.kuro",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.kuro",
          "match": "#.*$"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.kuro",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*(?=\\()"
        }
      ]
    }
  }
}